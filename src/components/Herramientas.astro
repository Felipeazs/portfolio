---
import neovim from "../assets/neovim.png"
import git from "../assets/git.png"
import github from "../assets/github.png"
import openai from "../assets/openai.png"

import Card from "./Card.astro"

const width = 50
const height = 50

const images = [
	{
		src: neovim.src,
		width,
		height,
		alt: "neovim",
	},
	{
		src: git.src,
		width,
		height,
		alt: "git",
	},
	{
		src: github.src,
		width,
		height,
		alt: "github",
	},
	{
		src: openai.src,
		width,
		height,
		alt: "openai",
	},
]
---

