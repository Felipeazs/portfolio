---
import { ClientRouter } from "astro:transitions"
import "../styles/global.css"

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link rel="icon" />
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>

	<body class="font-jetbrains">
		<div>
			<slot />
			<ClientRouter />
		</div>
	</body>
</html>
